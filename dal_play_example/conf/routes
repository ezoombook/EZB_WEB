# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                   controllers.Application.index

GET	    /users			    controllers.Application.users
POST	/users			    controllers.Application.newUser

POST	/login			    controllers.Application.validate
GET	    /login			    controllers.Application.login

POST	/books			    controllers.Application.newBook
POST	/books/load		    controllers.Application.loadBook			    

GET	    /groups			    controllers.Application.groups
GET	    /group/:id		    controllers.Application.group(id:String)

GET	    /home			    controllers.Application.home

POST	/groupmember/:id	controllers.Application.newGroupMember(id:String)

#EZOOMBOOK
GET     /ezlayer/form       controllers.Application.newEzoomlayer
POST    /ezlayer/load       controllers.Application.loadEzoomLayer


# Assets
GET     /assets/*file       controllers.Assets.at(path="/public", file)

# To create some data
GET  	/admin			    controllers.AdminApp.index
POST	/adminusers		    controllers.AdminApp.createUsers
POST	/admingroups		controllers.AdminApp.createGroups
POST	/adminbooks		    controllers.AdminApp.createBooks