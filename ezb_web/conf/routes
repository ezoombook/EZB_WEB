# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                   controllers.Application.index

GET	    /home			    controllers.Application.home
GET	/truehome				controllers.Application.truehome

GET	    /users			    controllers.Application.users
POST	/users			    controllers.Application.newUser

POST	/login			    controllers.Application.validate
GET	    /login			    controllers.Application.login

#logout
GET		/logout				controllers.Application.userLogout

#Password Reset
GET     /changepassword     controllers.Application.changePassword
POST    /changepassword     controllers.Application.sendPasswordResetLink
GET     /passwdreset/:t     controllers.Application.passwordReset(t:String)

#Parameter
GET		/parameters			controllers.Application.parameter

# Community
GET	    /groups			    controllers.Community.groups
GET	    /group/:id		    controllers.Community.group(id:String)
GET	    /project            controllers.Community.project

POST	/groupmember/:id	controllers.Community.newGroupMember(id:String)

# Projects
GET     /project/new        controllers.Collaboration.newPoject
GET     /project/edit/:id   controllers.Collaboration.editProject(id:String)
POST    /project/save       controllers.Collaboration.saveProject
GET     /project/admin/:id  controllers.Collaboration.projectAdmin(id:String)

# Books
GET	    /listbooks			controllers.EzoomBooks.listbooks
POST	/books			    controllers.EzoomBooks.saveBook
POST	/books/load		    controllers.EzoomBooks.loadBook
GET     /books/new          controllers.EzoomBooks.newBook

GET	    /bookreedit/:id	    controllers.EzoomBooks.reedit(id:String)
POST    /bookreedit/save    controllers.EzoomBooks.saveEditedBook

GET     /books/:id          controllers.EzoomBooks.readBook(id:String)


# Tutorial
GET	/tutorial		   controllers.Application.tutorial

# FAQ
GET	/faq			controllers.Application.faq

# Contact
GET	/contact		controllers.Application.contact

#EZOOMBOOK
GET     /ezb/edit/:id       controllers.EzoomBooks.newEzoomBook(id:String)
POST    /ezb/save/:bookid   controllers.EzoomBooks.saveEzoomBook(bookid:String)

GET     /ezlayer/form       controllers.EzoomBooks.newEzoomlayer
POST    /ezlayer/load       controllers.EzoomBooks.loadEzoomLayer
POST    /ezlayer/save       controllers.EzoomBooks.saveEzoomlayer
GET     /read       controllers.EzoomBooks.read

#Groups
POST	/groups		       controllers.Community.newGroup	
GET     /groupadmin/:id		controllers.Community.groupadmin(id:String)

# Assets
GET     /assets/*file       controllers.Assets.at(path="/public", file)

#Advanced search
GET	/asearch		controllers.Application.asearch

# To create some data
GET  	/admin			    controllers.AdminApp.index
POST	/adminusers		    controllers.AdminApp.createUsers
POST	/admingroups		controllers.AdminApp.createGroups
POST	/adminbooks		    controllers.AdminApp.createBooks